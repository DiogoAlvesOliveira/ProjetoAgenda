<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container"x>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça o login </p>
      <%- include('includes/messages'); %>
      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label for="email-cadastro" class="form-label label-email">Email address</label>
              <input type="email" class="form-control" name="email" id="email-cadastro" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              <label for="password-cadastro" class="form-label label-password">Password</label>
              <input type="password" name="password" class="form-control" id="password-cadastro">
            </div>
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Fazer login</h4>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label for="email-login" class="form-label label-email">Email address</label>
              <input type="email" class="form-control" name="email" id="email-login" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              <label for="password-login" class="form-label label-password">Password</label>
              <input type="password" name="password" class="form-control" id="password-login">
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </form>
        </div>
      </div>

      

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

    

<%- include('includes/footer'); %>